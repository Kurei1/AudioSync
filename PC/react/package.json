{
  "name": "audiosync-receiver",
  "private": true,
  "version": "1.0.1",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "vite build && electron-builder --win",
    "electron:build:dir": "vite build && electron-builder --win dir"
  },
  "build": {
    "appId": "com.audiosync.receiver",
    "productName": "AudioSync Receiver",
    "artifactName": "AudioSync-Receiver-Setup-${version}.${ext}",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../pc_receiver/dist",
        "to": "pc_receiver",
        "filter": [
          "AudioSync Audio Service.exe",
          "AudioSync Bluetooth Mode.exe"
        ]
      },
      {
        "from": "../pc_receiver/platform-tools",
        "to": "pc_receiver/platform-tools",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/images/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": true
    },
    "publish": {
      "provider": "github",
      "owner": "Kurei1",
      "repo": "AudioSync"
    },
    "asar": true
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "firebase": "^12.7.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}